{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Medium Example - User, Supplier, and Order",
  "type": "object",
  "properties": {
    "user": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "contact": {
          "type": "object",
          "properties": {
            "email": { "type": "string", "format": "email" },
            "phone": { "type": "string" }
          },
          "required": ["email"]
        },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "zip": { "type": "string" }
          },
          "required": ["street", "city"]
        }
      },
      "required": ["id", "name", "contact", "address"]
    },
    "supplier": {
      "type": "object",
      "properties": {
        "supplierId": { "type": "string" },
        "companyName": { "type": "string" },
        "contact": {
          "type": "object",
          "properties": {
            "email": { "type": "string", "format": "email" },
            "phone": { "type": "string" }
          },
          "required": ["email"]
        },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "zip": { "type": "string" }
          },
          "required": ["street", "city"]
        }
      },
      "required": ["supplierId", "companyName", "contact", "address"]
    },
    "order": {
      "type": "object",
      "properties": {
        "orderId": { "type": "string" },
        "date": { "type": "string", "format": "date" },
        "shippingAddress": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "zip": { "type": "string" }
          },
          "required": ["street", "city"]
        },
        "contact": {
          "type": "object",
          "properties": {
            "email": { "type": "string", "format": "email" },
            "phone": { "type": "string" }
          },
          "required": ["email"]
        }
      },
      "required": ["orderId", "date", "shippingAddress", "contact"]
    }
  },
  "required": ["user", "supplier", "order"]
}
