{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Small Example - User with Billing Address",
  "type": "object",
  "properties": {
    "user": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" }
          },
          "required": ["street", "city"]
        }
      },
      "required": ["name", "address"]
    },
    "billing": {
      "type": "object",
      "properties": {
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" }
          },
          "required": ["street", "city"]
        }
      },
      "required": ["address"]
    }
  },
  "required": ["user", "billing"]
}
