{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Large Example - E-Commerce System",
  "type": "object",
  "properties": {
    "user": {
      "type": "object",
      "properties": {
        "id": { "type": "string" },
        "name": { "type": "string" },
        "contact": {
          "type": "object",
          "properties": {
            "email": { "type": "string", "format": "email" },
            "phone": { "type": "string" }
          },
          "required": ["email"]
        },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "zip": { "type": "string" }
          },
          "required": ["street", "city"]
        }
      },
      "required": ["id", "name", "contact", "address"]
    },
    "supplier": {
      "type": "object",
      "properties": {
        "supplierId": { "type": "string" },
        "companyName": { "type": "string" },
        "contact": {
          "type": "object",
          "properties": {
            "email": { "type": "string", "format": "email" },
            "phone": { "type": "string" }
          },
          "required": ["email"]
        },
        "address": {
          "type": "object",
          "properties": {
            "street": { "type": "string" },
            "city": { "type": "string" },
            "zip": { "type": "string" }
          },
          "required": ["street", "city"]
        }
      },
      "required": ["supplierId", "companyName", "contact", "address"]
    },
    "orders": {
      "type": "array",
      "items": {
        "type": "object",
        "properties": {
          "orderId": { "type": "string" },
          "date": { "type": "string", "format": "date" },
          "shippingAddress": {
            "type": "object",
            "properties": {
              "street": { "type": "string" },
              "city": { "type": "string" },
              "zip": { "type": "string" }
            },
            "required": ["street", "city"]
          },
          "contact": {
            "type": "object",
            "properties": {
              "email": { "type": "string", "format": "email" },
              "phone": { "type": "string" }
            },
            "required": ["email"]
          },
          "products": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "productId": { "type": "string" },
                "name": { "type": "string" },
                "quantity": { "type": "integer", "minimum": 1 },
                "price": { "type": "number", "minimum": 0 }
              },
              "required": ["productId", "name", "quantity", "price"]
            }
          },
          "payment": {
            "type": "object",
            "properties": {
              "method": { "type": "string", "enum": ["credit-card", "paypal", "bank-transfer"] },
              "amount": { "type": "number", "minimum": 0 },
              "currency": { "type": "string", "pattern": "^[A-Z]{3}$" }
            },
            "required": ["method", "amount", "currency"]
          }
        },
        "required": ["orderId", "date", "shippingAddress", "contact", "products", "payment"]
      }
    }
  },
  "required": ["user", "supplier", "orders"]
}
